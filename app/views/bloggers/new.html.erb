<h1>Create a Blogger</h1>

<% if @blogger.errors.any? %>
  <% @blogger.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @blogger do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>

  <%= f.label "Age:" %>
  <%= f.number_field :age %><br>

  <%= f.label "Bio:" %>
  <%= f.text_area :bio %><br>

  <%= f.submit %>
<% end %>
